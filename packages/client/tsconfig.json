{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "ESNext",
    "baseUrl": "./",
    "moduleResolution": "node",

    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "PUBLIC_DIR": ["../../public"],
      "COMMON_DIR": ["../common"],
      "SRC_DIR": ["./src"]
    }
  }
}
